generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Link {
  code String @id
  url  String
  clicks Int  @default(0)
  createdAt DateTime @default(now())
  lastClickedAt DateTime?
}